<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <PackageProjectUrl>https://github.com/viper3400/Jaxx.Net.IterationParser</PackageProjectUrl>
    <PackageLicenseUrl>https://github.com/viper3400/Jaxx.Net.IterationParser/blob/master/LICENSE</PackageLicenseUrl>
    <RepositoryUrl>https://github.com/viper3400/Jaxx.Net.IterationParser</RepositoryUrl>
    <Company>Jaxx</Company>
    <Authors>Jan Graefe</Authors>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Copyright>2019</Copyright>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Configuration" Version="2.2.0" />
    <PackageReference Include="Microsoft.Extensions.Configuration.Json" Version="2.2.0" />
  </ItemGroup>

  <ItemGroup>
    <None Update="GenericRegExSelectorConfiguration.json">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Update="IterationRegExSelectorConfiguration.json">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>
